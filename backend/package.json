{
  "name": "movie-reviews-backend",
  "version": "1.0.0",
  "description": "Backend for movie reviews platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node seed/seed.js",
    "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles --verbose",
    "test:watch": "cross-env NODE_ENV=test jest --watch --verbose", 
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.6.0",
    "mongodb-memory-server": "^8.13.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["./tests/setup.js"],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js", 
      "routes/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "forceExit": true,
    "detectOpenHandles": true
  }

 
}
